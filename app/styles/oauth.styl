base-font = "Segoe UI", "Verdana", "Arial", "sans-serif"
title-font = "Segoe UI Light", "Helvetica", "Tahoma", "Verdana", "Arial", "sans-serif"

primary-color = #0072c6
primary-highlight-color = darken(primary-color, 15%)
//primary-active-highlight-color = lighten(primary-color, 15%)
link-color = primary-color
text-color = #333
inverted-text-color = white

body
  color text-color 
  padding 20px 5%
  font-family base-font

h1, h2, h3
  font-family title-font
  margin 0.3em 0

h1
  font-size 32px

h2
  font-size 24px
  text-transform lowercase

h3
  text-transform uppercase
  font-size 14px
  font-weight bold

a, a:visited
  text-decoration none
  color primary-color
  &:hover
    color primary-highlight-color 

.content
  height 300px

article > section
  background-color: orange
  &.ng-hide
    display block !important
    background-color: white

.ng-hide-add, 
.ng-hide-remove {
  -webkit-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
  -moz-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
  -ms-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
  transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
}

.ng-hide-add.ng-hide-add-active,
.ng-hide-remove {
  background-color: white;
}

.ng-hide-add,
.ng-hide-remove.ng-hide-remove-active {
  background-color: orange;
}

// Metro styling
ul.accordion
  > li > h2 a
    padding 0.2em
    background-color primary-color
    color inverted-text-color
    &:hover, &:focus
      background-color primary-highlight-color
  > li.active > h2 a
    background-color primary-highlight-color
